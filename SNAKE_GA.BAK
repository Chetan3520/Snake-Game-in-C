#include<stdio.h>
#include<conio.h>
#include<stdlib.h>
int x,y,fruitx,fruity,score,Gameover,flag;
int height=20,width=20;
void draw()
{
	int i,j;
	clrscr();
	for(i=0;i<=height;i++)
	{
	    for(j=0;j<=width;j++)
	    {
		if(i==0 || i==height || j==0 || j==width)
		{
		  printf("*");
		}
		else
		{
		  if(i==x && j==y)
		  printf("o");
		  else if(i==fruitx && j==fruity)
		  printf("F");
		  else
		  printf(" ");
		}


	    }
	    printf ("\n");
	}
}
void setup()
{

	x=width/2;
	y=height/2;
	label1:
	fruitx=rand()%20;
	if(fruitx==0)
	goto label1;
	label2:
	fruity=rand()%20;
	if(fruity==0)
	goto label2;
	score=0;
}
void input()
{

	  if(kbhit())
	  {
		switch(getch())
		{
		   case 'a':
			flag=1;
			break;
		   case 's':
			flag=2;
			break;
		   case 'w':
			flag=3;
			break;
		   case 'z':
			flag=4;
			break;
		   case 'x':
			Gameover=1;


		}
	  }




}
void Logic()
{
	switch(flag)
	{
	   case 1:
	   y--;      //right shift
	   break;
	   case 2:
	   y++;     //left shift
	   break;
	   case 3:
	   x--;    //up shift
	   break;
	   case 4:
	   x++;     //down shift
	   break;

	}
	if(x<0||x>width||y<0||y>height)
	Gameover=1;


}

int main()
{
	int m,n;
	setup();
	while(1)
	{
	  draw();
	  input();
	  Logic();
	  for(m=0;m<=10000;m++)
	  {
		for(n=0;n<=10000;n++)
		{
		}
	  }

	}
}
